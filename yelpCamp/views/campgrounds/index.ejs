<% layout('/layouts/boilerplate') %>

    <div id="map" style="width: 100%; height: 500px;"></div>
    <h1 class="display-1 text-center py-4 text-white">All Campgrounds

    </h1>


    <!-- <div>
        <a href="/campgrounds/new">Add campground</a>
    </div> -->
    <ul class="des">
        <% for(let campground of campgrounds) {%>
            <div class="card my-2 border-0">
                <div class="row">
                    <div class="col-md-4 img-des">

                        <% if(campground.images.length){ %>
                            <img class="img-fluid pt-5 px-4" src="<%=campground.images[0].url %> ">
                            <% }else{ %>
                                <img class="img-fluid"
                                    src="https://cdn.pixabay.com/photo/2021/08/25/20/42/field-6574455__480.jpg">
                                <% } %>
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h2 class="card-title display-6 des">
                                <%=campground.title%>

                            </h2>

                            <p class="card-text lead des">
                                <%=campground.description%>
                            </p>

                            <p class="card-text lead des">
                                <small class="text-muted">
                                    <%=campground.location%>
                                </small>
                            </p>

                            <a href="/campgrounds/<%=campground.id%> " class="btn btn-outline-danger des">View
                                <%=campground.title%>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% } %>
    </ul>
    <script>
        const mapToken = '<%- process.env.MAPBOX_TOKEN%>'
        const campgrounds = { features: JSON.parse('<%-JSON.stringify(campgrounds) %>') };
    </script>
    <script src="/javascripts/clusterMap.js"></script>